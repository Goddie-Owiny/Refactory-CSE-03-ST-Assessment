  body
    .container.mt-5
      h2.mb-4 Student Registration Form
      .row
        .col-md-2.col-empty
          img.logo-image(src='/images/ciu.jpg' alt="Logo Image")
        .col-md-10
          .form-container
            .row.g-3
              .col-md-6
                form(method="POST", action="/register")
                  .mb-3
                    label.form-label(for="firstName") First Name
                    input#firstName.form-control(
                      type="text"
                      name="firstName"
                    )
                  .mb-3
                    label.form-label(for="entryScheme") Entry Scheme
                    select#entryScheme.form-select(name="entryScheme")
                      option(value="" selected) Choose...
                      option(value="entryScheme1") Entry Scheme 1
                      option(value="entryScheme2") Entry Scheme 2
                      option(value="entryScheme3") Entry Scheme 3
                  .mb-3
                    label.form-label(for="email") Email
                    input#email.form-control(
                      type="email"
                      name="email"
                    )
                  .mb-3
                    label.form-label(for="phone") Phone Number
                    input#phone.form-control(
                      type="tel"
                      name="phone"
                    )
                  .mb-3
                    label.form-label(for="address") Address
                    input#address.form-control(
                      type="text"
                      name="address"
                    )
                  .mb-3
                    label.form-label(for="dob") Date of Birth
                    input#dob.form-control(
                      type="date"
                      name="dob"
                    )
                  .mb-3
                    label.form-label(for="course") Course
                    select#course.form-select(name="course")
                      option(value="" selected) Choose...
                      option(value="course1") Course 1
                      option(value="course2") Course 2
                      option(value="course3") Course 3
                  .mb-3
                    label.form-label(for="gender") Gender
                    select#gender.form-select(name="gender")
                      option(value="" selected) Select Gender
                      option(value="male") Male
                      option(value="female") Female
              .col-md-6
                .mb-3
                  label.form-label(for="lastName") Last Name
                  input#lastName.form-control(
                    type="text"
                    name="lastName"
                  )
                .mb-3
                  label.form-label(for="intake") Intake
                  select#intake.form-select(name="intake")
                    option(value="" selected) Choose...
                    option(value="intake1") Intake 1
                    option(value="intake2") Intake 2
                    option(value="intake3") Intake 3
                .mb-3
                  label.form-label(for="sponsorship") Sponsorship
                  select#sponsorship.form-select(name="sponsorship")
                    option(value="" selected) Choose...
                    option(value="sponsorship1") Sponsorship 1
                    option(value="sponsorship2") Sponsorship 2
                    option(value="sponsorship3") Sponsorship 3
                .mb-3
                  label.form-label(for="residence") Residence
                  input#residence.form-control(
                    type="text"
                    name="residence"
                  )
                .form-check.mb-3
                  input#terms.form-check-input(
                    type="checkbox"
                    name="terms"
                    required=true
                  )
                  label.form-check-label(for="terms") I agree to the terms and conditions
                button.btn.btn-primary(type="submit") Register
    // Bootstrap JS Bundle with Popper
    script(src="/JS/Student.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")

